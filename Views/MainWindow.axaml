<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DS3InputMaster.ViewModels"
        x:Class="DS3InputMaster.Views.MainWindow"
        Title="DS3 Input Master"
        MinWidth="600" MinHeight="400">
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
            <TextBlock Text="DS3 Input Master" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,300" Margin="0,10,0,0">
            <!-- Left Panel - Settings -->
            <ScrollViewer Grid.Column="0" Margin="0,0,10,0">
                <StackPanel Spacing="15">
                    <!-- Connection Status -->
                    <GroupBox Header="Статус системы">
                        <StackPanel Spacing="10">
                            <CheckBox Content="Активировать систему управления" 
                                      IsChecked="{Binding IsCapturingInput}"/>
                            <TextBlock Text="{Binding CurrentGameState}" 
                                       FontWeight="Bold"
                                       Foreground="Green"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Profile Selection -->
                    <GroupBox Header="Профили управления">
                        <StackPanel Spacing="10">
                            <ComboBox Items="{Binding AvailableProfiles}" 
                                      SelectedItem="{Binding SelectedProfile}"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Button Content="Создать" Command="{Binding CreateProfileCommand}"/>
                                <Button Content="Сохранить" Command="{Binding SaveProfileCommand}"/>
                                <Button Content="Удалить" Command="{Binding DeleteProfileCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Quick Actions -->
                    <GroupBox Header="Быстрые действия">
                        <StackPanel Spacing="10">
                            <Button Content="Калибровать мышь" Command="{Binding CalibrateCommand}"/>
                            <Button Content="Запустить систему" Command="{Binding StartCommand}"/>
                            <Button Content="Остановить систему" Command="{Binding StopCommand}"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Panel - Log -->
            <GroupBox Grid.Column="1" Header="Лог событий">
                <ListBox Items="{Binding LogMessages}" 
                         Background="Transparent"
                         BorderThickness="0"/>
            </GroupBox>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="5" Margin="0,10,0,0">
            <TextBlock Text="DS3 Input Master v1.0 - Для Dark Souls 3" 
                       HorizontalAlignment="Center"
                       Foreground="Gray"/>
        </Border>
    </Grid>
</Window>
